<div class="container">
      <div class="header clearfix">
        <nav>
          <ul class="nav nav-pills pull-right">
            <li role="presentation" class="active"><a href="/">Dashboard</a></li>
            <li class="dropdown">
              <% if session[:user_id] != nil %><% @user = User.find_by(id: session[:user_id]) %>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%="#{@user.email}"%><span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
              <%else%>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Not Logged In<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Register</a></li>
              <%end%>
                <li class="divider"></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            </li>
          </ul>
        </nav>

        <h3 class="text-muted">Flicker Jr.</h3>
      </div>

      <div class="jumbotron">
        <h1>Flicker Jr.</h1>

        <% if !@errors.nil?%>
          <% @errors.each do |error| %>
            <div class="alert alert-danger" role="alert"><%= error%></div>
          <%end%>
        <% end %>

        <form action='/login' method='post'>
          <div class="form-group">
            <input type="email" class="form-control" name="user[email]" placeholder="Email" required="true">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="user[password]" placeholder="Password" required="true">
          </div>
          <button type="submit" class="btn btn-success btn-lg">Login &raquo;</button>
        </form>
      </div>

      <footer class="footer">
        <p>&copy; Company 2014</p>
      </footer>

    </div> <!-- /container -->